<style>
  {{#if fontRegular}}
  @font-face {
    font-family: 'Bai Jamjuree';
    src: url('{{fontRegular}}') format('truetype');
    font-weight: 400;
    font-style: normal;
  }
  @font-face {
    font-family: 'Bai Jamjuree';
    src: url('{{fontSemiBold}}') format('truetype');
    font-weight: 600;
    font-style: normal;
  }
  @font-face {
    font-family: 'Bai Jamjuree';
    src: url('{{fontBold}}') format('truetype');
    font-weight: 700;
    font-style: normal;
  }
  {{/if}}

  * { margin: 0; padding: 0; box-sizing: border-box; }

  body {
    font-family: 'Bai Jamjuree', 'Noto Sans Thai', sans-serif;
    font-size: 13px;
    line-height: 1.35;
    color: #333;
  }

  .page { width: 100%; position: relative; min-height: 100vh; }
  .page-break { page-break-before: always; }

  /* ===== HEADER ===== */
  .doc-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding-bottom: 4px;
    margin-bottom: 2px;
  }
  .doc-header-left {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .doc-header-left img { height: 38px; }
  .company-info { font-size: 11px; line-height: 1.3; }
  .company-info .name-th { font-weight: 700; font-size: 12px; }
  .company-info .name-en { font-weight: 600; font-size: 11px; }
  .doc-header-right { text-align: right; }
  .doc-title {
    font-size: 30px;
    font-weight: 700;
    color: #1a9e96;
    white-space: nowrap;
  }
  .doc-header-center { text-align: center; }
  .doc-header-center img { width: 65px; height: 65px; }

  /* ===== ADDRESS + PHONE/TAX ===== */
  .address-line {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 10px;
    color: #555;
    margin-bottom: 4px;
    line-height: 1.3;
  }
  .address-text { flex: 1; }
  .phone-tax-inline {
    white-space: nowrap;
    text-align: right;
    padding-left: 12px;
  }
  .phone-tax-inline .phone {
    font-size: 14px;
    font-weight: 700;
    color: #333;
  }
  .phone-tax-inline .tax-id {
    font-size: 12px;
    font-weight: 600;
    color: #333;
    margin-left: 8px;
  }

  /* ===== DOC META (borrowing slip) ===== */
  .doc-meta-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }
  .doc-meta-right { text-align: right; }
  .doc-number { font-size: 18px; font-weight: 700; }
  .doc-type { font-size: 13px; color: #555; }

  /* ===== INFO TABLE (bordered, for service order) ===== */
  .info-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px;
    margin-bottom: 0;
  }
  .info-table td {
    border: 1px solid #ccc;
    padding: 4px 8px;
    vertical-align: top;
  }
  .info-table .label {
    font-weight: 600;
    color: #333;
    white-space: nowrap;
    width: 120px;
    background: #edf7f6;
  }
  .info-table .label-wrap {
    font-weight: 600;
    color: #333;
    white-space: normal;
    width: 120px;
    background: #edf7f6;
  }
  .info-table .value {
    color: #444;
  }
  .info-table .no-border {
    border: none;
  }

  /* ===== INFO GRID (borderless, for borrowing slip) ===== */
  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1px 20px;
    margin-bottom: 8px;
    font-size: 12px;
  }
  .info-row { display: flex; gap: 6px; padding: 2px 0; }
  .info-label { font-weight: 600; white-space: nowrap; color: #333; }
  .info-value { flex: 1; color: #444; }

  /* ===== SECTION TITLE ===== */
  .section-title {
    font-weight: 700;
    font-size: 13px;
    margin: 8px 0 4px 0;
    padding: 4px 8px;
    background: #d4efec;
    border-bottom: 2px solid #1a9e96;
    color: #333;
  }
  .section-title-plain {
    font-weight: 700;
    font-size: 13px;
    text-align: center;
    padding: 8px 0 6px;
    color: #333;
  }

  /* ===== DATA TABLE (borrowing slip parts) ===== */
  table.data-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 11px;
    margin-bottom: 6px;
  }
  table.data-table th,
  table.data-table td {
    border: 1px solid #ccc;
    padding: 4px 6px;
    text-align: left;
    vertical-align: top;
  }
  table.data-table th {
    background: #d4efec;
    font-weight: 600;
    text-align: center;
    font-size: 11px;
    color: #333;
  }
  table.data-table tr:nth-child(even) td { background: #f0faf9; }

  .text-center { text-align: center; }
  .text-right { text-align: right; }
  .text-bold { font-weight: 600; }
  .nowrap { white-space: nowrap; }

  /* ===== COST TABLE (nested inside info-table) ===== */
  .cost-inner {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px;
  }
  .cost-inner td {
    padding: 2px 4px;
    border: none;
    vertical-align: middle;
  }
  .cost-inner .cost-name { white-space: nowrap; }
  .cost-inner .cost-amount { text-align: right; width: 70px; }
  .cost-inner .cost-unit { text-align: left; width: 30px; font-size: 11px; padding-left: 4px; }
  .cost-inner tr:last-child td { font-weight: 600; }

  /* ===== INSTALL DATA (inline text in table cell) ===== */
  .install-data {
    font-size: 11px;
    line-height: 1.5;
  }

  /* ===== CHECKLIST TABLE ===== */
  .checklist-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px;
    margin-bottom: 8px;
  }
  .checklist-table td {
    border: 1px solid #ccc;
    padding: 5px 8px;
    vertical-align: top;
  }
  .checklist-table .check-col {
    width: 30px;
    text-align: center;
    font-weight: 600;
  }

  /* ===== SIGNATURE ===== */
  .signature-section {
    text-align: center;
    margin-top: 20px;
  }
  .signature-label { font-weight: 600; font-size: 12px; margin-bottom: 4px; }
  .signature-line { width: 200px; border-bottom: 1px solid #999; height: 50px; display: inline-block; }
  .signature-img { max-height: 50px; }

  /* ===== FOOTER ===== */
  .page-footer {
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 10px;
    color: #999;
  }
</style>
